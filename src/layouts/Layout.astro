---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@fontsource-variable/m-plus-1";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header>
        <div class="masthead">
          <h1>
            japanese colours <span class="jp-title">日本の色</span>
          </h1>
        </div>
        <div class="coloredSquares">
          <div class="square"></div>
          <div class="square"></div>
          <div class="square"></div>
          <div class="square"></div>
          <div class="square"></div>
          <div class="square"></div>
        </div>
      </header>
      <p class="tagline">
        copy-paste <a href="https://www.nuevo.tokyo/" target="_blank"
          >Nuevo.Tokyo</a
        >'s curated colour palettes for your projects.
      </p>
      <slot />
    </div>
  </body>
  <style is:global lang="scss">
    :root {
      --bg-color: #e5e4e6;
      --grid-color: #b3b2ae53;
      --bg-size: 33px;
      --main-blue: #222940;
      --main-red: #d32f30;
      --main-gray: #b3b2ae;
      --border-color: var(--main-gray);
      --main-black: #010101;
      --second-blue: #3c486d;
      --second-gray: #a7a9a4;
    }

    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    body,
    html {
      padding: 0;
      margin: 0;
    }

    html {
      font-size: 17px;
    }

    body {
      line-height: 1.6;
      font-family: "M PLUS 1 Variable", sans-serif;
      background-color: var(--main-blue);
      min-height: 100dvh;
      background-size: var(--bg-size) var(--bg-size);
      background-position: top center;
      background-image: linear-gradient(
          to right,
          var(--grid-color) 0px,
          transparent 1px
        ),
        linear-gradient(to bottom, var(--grid-color) 0px, transparent 1px);
    }

    .container {
      border-right: solid 3.5px var(--border-color);
      border-left: solid 3.5px var(--border-color);
      padding: 0 2em;
      margin: 0 2rem;
      min-height: 100dvh;
      background: var(--bg-color);
    }

    header {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;

      .masthead {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
      }
      .coloredSquares {
        display: flex;
        justify-content: center;
        .square {
          width: clamp(30px, 9.5vw, 40px);
          height: clamp(30px, 9.5vw, 40px);

          &:nth-child(1) {
            background-color: var(--main-blue);
          }
          &:nth-child(2) {
            background-color: var(--main-red);
          }
          &:nth-child(3) {
            background-color: var(--main-gray);
          }
          &:nth-child(4) {
            background-color: var(--main-black);
          }
          &:nth-child(5) {
            background-color: var(--second-blue);
          }
          &:nth-child(6) {
            background-color: var(--second-gray);
          }
        }
      }
    }

    .tagline {
      font-size: clamp(1rem, 3vw, 1.2rem);
      font-weight: 300;
      color: var(--main-blue);
      text-align: center;
      position: relative;

      &::after {
        position: absolute;
        content: "";
        background-color: var(--border-color);
        width: 100%;
        height: 2.5px;
        bottom: -1rem;
        left: 50%;
        transform: translate(-50%, -50%);
      }
    }

    a {
      color: var(--main-blue);
    }

    h1 {
      color: var(--second-blue);
      text-align: center;
      font-size: clamp(2rem, 9.5vw, 3.6rem);
      margin: 0;
      font-weight: 300;
    }

    .jp-title {
      display: block;
      color: var(--main-red);
    }

    @media (min-width: 985px) {
      .jp-title {
        display: inline;
      }
      .container {
        margin: 0 4.5rem;
      }
    }

    @media (min-width: 1250px) {
      header {
        flex-direction: row;
        justify-content: space-between;
      }
      .tagline {
        text-align: left;
      }
    }
  </style>
</html>
